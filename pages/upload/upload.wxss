/* pages/upload/upload.wxss */
.modify_btn {
  display: flex;
  width: fit-content;
  margin: 20rpx;
  background-color: green;
  color: white;
  border-radius: 8rpx;
  line-height: 70rpx;
  font-size: 40rpx;
  animation-name: myshadow;
  animation-duration: 2000s;
  animation-timing-function: linear;
  animation-iteration-count: infinite;
  -webkit-animation-name: myshadow;
  -webkit-animation-duration: 3000ms;
  -webkit-animation-timing-function: linear;
  -webkit-animation-iteration-count: infinite;
}
.container1 {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
}
.order-scroll {
  height: 100%;
}
.span1 {
  display: inline-block;
}
.info_checker {
  margin: 20rpx;
  vertical-align: top;
  width: 100%;
  height: 7%;
}
.small_text {
  align-items: left;
  height: 70rpx;
}
.modify_view {
  width: 90%;
}

.new_number {
  padding-left: 10rpx;
  display: inline-block;
  margin-left: 5rpx;
  width: 350rpx;
  height: 70rpx;
  border: 1rpx solid green;
  border-radius: 25rpx;
  text-emphasis-color: black;
  vertical-align: middle;
}
.id_code {
  margin-left: 10rpx;
  margin-right: 10rpx;
  padding-left: 5rpx;
  display: inline-block;
  width: 150rpx;
  height: 70rpx;
  border: 1rpx solid green;
  border-radius: 25rpx;
  text-emphasis-color: black;
  line-height: 70rpx;
  vertical-align: middle;
}
.uploader {
  border-style: dashed;
  color: rgb(151, 196, 151);
  padding: 10rpx;
  margin: 30rpx auto;
  border-width: 15rpx;
  border-radius: 20rpx;
  width: 570rpx;
  height: 360rpx;
  box-shadow: darkgrey 10rpx 10rpx 30rpx 5rpx;
  background-color: transparent;
  overflow: hidden;
  text-align: center;
  position: relative;
}
.img {
  width: 570rpx;
  height: 360rpx;
  z-index: 1;
  position: absolute;
  display: block;
}

.state {
  width: 150rpx;
  height: 150rpx;
  position: absolute;
  display: block;
  bottom: 10rpx;
  right: 10rpx;
  z-index: 3;
  animation-name: myfirst;
  animation-duration: 2000s;
  animation-timing-function: linear;
  animation-iteration-count: infinite;
  -webkit-animation-name: myfirst;
  -webkit-animation-duration: 3000ms;
  -webkit-animation-timing-function: linear;
  -webkit-animation-iteration-count: infinite;
}
#scroll {
  height: 90%;
}
#new_path {
  color: black;
}
.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}
.show-btn {
  margin-top: 100rpx;
  color: #22cc22;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}
.animationSlow {
  margin-top: -1555px;
  margin-left: -1555px;
  width: 7777rpx;
  height: 7777rpx;
  background-color: rgba(0, 0, 0, 0.397);
  animation-name: myfirst;
  animation-duration: 2000s;
  animation-timing-function: linear;
  animation-iteration-count: infinite;
  -webkit-animation-name: myfirst;
  -webkit-animation-duration: 3000ms;
  -webkit-animation-timing-function: linear;
  -webkit-animation-iteration-count: infinite;
  position: fixed;
  z-index: -1;
}

@keyframes myfirst {
  from,
  10%,
  to {
    transform: rotate(0deg);
    scale: 1;
  }
  50% {
    transform: rotate(180deg);
    scale: 1.1;
  }
  100% {
    transform: rotate(360deg);
    scale: 1;
  }
}

@-webkit-keyframes myfirst {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}
@keyframes myshadow {
  from,
  10%,
  to {
    scale: 1;
    opacity: 0.2;
  }
  50% {
    scale: 1.1;
    opacity: 1;
  }
  90% {
    scale: 1;
    opacity: 0.2;
  }
}
@-webkit-keyframes myshadow {
  from,
  10%,
  to {
    scale: 1;
    opacity: 0.2;
  }
  40% {
    scale: 1.1;
    opacity: 1;
  }
  80% {
    scale: 1;
    opacity: 0.2;
  }
}
